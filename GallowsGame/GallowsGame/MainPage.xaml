<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GallowsGame.MainPage"
             BackgroundImageSource = "firstpagebg.png">


    <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Margin="0,0,50,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackLayout
             VerticalOptions="Start"
             HorizontalOptions="Center"
             Spacing="0">
            <Label Text="Виселица"
                FontSize="58"
                HorizontalOptions="Center"
                VerticalOptions="Start"
                FontFamily="Maki-Sans"
                TextColor="Red"/>

        </StackLayout>

        <StackLayout Grid.Row="1"
                     VerticalOptions="Center"
                     HorizontalOptions="Center"
                     Spacing="20"
                     >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="135"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="415"/>
                </Grid.ColumnDefinitions>

                <Image 
                    Source="firstbttn.png" />

                <Button Text="начать игру"
                    FontSize="44"
                    Clicked="OnStartGameButtonClicked"
                    FontFamily="Maki-Sans"
                    HeightRequest="135"
                    WidthRequest="415"
                    BackgroundColor="Transparent"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="CenterAndExpand"
                    TextColor="Navy"/>
            </Grid>


            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="135"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="415"/>
                </Grid.ColumnDefinitions>

                <Image 
                    Source="secondbttn.png" 
                />
                <Button Text="правила игры"
                     FontSize="44"
                     HeightRequest="135"
                     WidthRequest="415"
                     BackgroundColor="Transparent"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     FontFamily="Maki-Sans"
                     TextColor="Navy"/>
            </Grid>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="135"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="415"/>
                </Grid.ColumnDefinitions>

                <Image 
                    Source="thirdbttn.png" 
                 />
                <Button Text="выйти"
                   FontSize="44"
                   HeightRequest="90"
                   WidthRequest="280"
                   Clicked="OnExitButtonClicked"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontFamily="Maki-Sans"
                   TextColor="Navy"/>
            </Grid>
        </StackLayout>
    </Grid>

</ContentPage>
